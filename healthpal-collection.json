    {
      "name": "Auth",
      "item": [
        {
          "name": "Register",
          "request": {
            "method": "POST",
            "header": [
              { "key": "Content-Type", "value": "application/json" }
            ],
            "url": {
              "raw": "{{base_url}}/api/auth/register",
              "host": ["{{base_url}}"],
              "path": ["api", "auth", "register"]
            },
            "body": {
              "mode": "raw",
              "raw": "{\n  \"full_name\": \"Test Patient\",\n  \"email\": \"patient@example.com\",\n  \"password\": \"Password123\",\n  \"role\": \"patient\",\n  \"phone\": \"+970599000000\"\n}"
            },
            "description": "Register a new user (patient, doctor, donor, ngo, admin)."
          },
          "response": [
            {
              "name": "201 Created",
              "originalRequest": {},
              "status": "Created",
              "code": 201,
              "body": "{\n  \"message\": \"User registered successfully\",\n  \"userId\": 1,\n  \"user\": {\n    \"id\": 1,\n    \"full_name\": \"Test Patient\",\n    \"email\": \"patient@example.com\",\n    \"role\": \"patient\",\n    \"phone\": \"+970599000000\",\n    \"verified\": false\n  }\n}"
            },
            {
              "name": "409 Email already registered",
              "originalRequest": {},
              "status": "Conflict",
              "code": 409,
              "body": "{\n  \"error\": \"Email already registered\",\n  \"details\": \"Please use a different email or login instead\"\n}"
            }
          ]
        },
        {
          "name": "Login",
          "request": {
            "method": "POST",
            "header": [
              { "key": "Content-Type", "value": "application/json" }
            ],
            "url": {
              "raw": "{{base_url}}/api/auth/login",
              "host": ["{{base_url}}"],
              "path": ["api", "auth", "login"]
            },
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"patient@example.com\",\n  \"password\": \"Password123\"\n}"
            },
            "description": "Login and obtain JWT access token."
          },
          "response": [
            {
              "name": "200 OK",
              "status": "OK",
              "code": 200,
              "body": "{\n  \"message\": \"Login successful\",\n  \"token\": \"<JWT_TOKEN>\",\n  \"user\": {\n    \"id\": 1,\n    \"full_name\": \"Test Patient\",\n    \"email\": \"patient@example.com\",\n    \"phone\": \"+970599000000\",\n    \"role\": \"patient\",\n    \"verified\": false\n  }\n}"
            },
            {
              "name": "401 Invalid credentials",
              "status": "Unauthorized",
              "code": 401,
              "body": "{\n  \"error\": \"Invalid credentials\",\n  \"message\": \"Email or password is incorrect\"\n}"
            }
          ]
        },
        {
          "name": "Refresh Token",
          "request": {
            "method": "POST",
            "header": [
              { "key": "Content-Type", "value": "application/json" }
            ],
            "url": {
              "raw": "{{base_url}}/api/auth/refresh",
              "host": ["{{base_url}}"],
              "path": ["api", "auth", "refresh"]
            },
            "body": {
              "mode": "raw",
              "raw": "{\n  \"token\": \"{{access_token}}\"\n}"
            },
            "description": "Refresh an access token (no auth header required, uses token in body)."
          }
        }
      ]
    },

